{
    "name": "Weather Songs",
    "description": "Songs to match the weather",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "type": "module"
      },
      "permissions": ["storage", "activeTab", "scripting"],
      "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "weather.png"
          }
      },
      "icons": {
        "16": "weather.png"
      }
}